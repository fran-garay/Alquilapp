<h2>Precios pasados</h2>
<% @precios = Precio.all.reverse%>

<div class="container-sm">
 <hr> 
  <div class="table-responsive">
    <table class="table">
      <tr>
        <th class="fs-5 text-center">PRECIO</th>
        <th class="fs-5 text-center">FECHA DE ACTUALIZACION</th>
      </tr>
      <%-@precios.each do |precio|-%>
        <tr>
        <td class="font-size: 1rem text-center">$<%= precio.valor %></td>
        <td class="font-size: 1rem text-center"><%= precio.fecha_de_actualizacion.strftime("%d/%m/%Y") %></td>
        </tr>
      <%end%>
    </table>
  </div>
</div>
